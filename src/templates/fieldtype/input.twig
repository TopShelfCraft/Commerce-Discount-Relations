{% do view.registerAssetBundle('TopShelfCraft\\DiscountRelations\\web\\assets\\DiscountsField') -%}

{% set config = {
	type: 'text',
	id: name,
	name: name,
	value: value ?? null,
	class: 'DiscountsField',
} %}

{{- tag('input', config) -}}

{% set jsSettings = {
	name: name | namespaceInputName,
	currentOptions: currentOptions ?? [],
} %}

{% js %}

	DiscountRelations.DiscountsField.initField(
		document.getElementById("{{ name | namespaceInputId }}"),
		{{ jsSettings|json_encode|raw }}
	);

{% endjs %}
